{
  "env": {
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "objectLiteralComputedProperties": false,
    "objectLiteralDuplicateProperties": false
  },
  "rules": {
    "no-control-regex": 0,
    "no-extra-parens": 1,
    "no-reserved-keys": 0,

    "block-scoped-var": 2,
    "complexity": [1, 25],
    "curly": 0,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-div-regex": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-floating-decimal": 2,
    "no-multi-str": 0,
    "no-self-compare": 2,
    "no-throw-literal": 2,
    "no-void": 2,
    "no-warning-comments": [1, {"terms": ["todo"], "location": "start"}],
    "radix": 1,
    "wrap-iife": [2, "inside"],
    "yoda": [2, "never"],

    "strict": [2, "function"],

    "no-catch-shadow": 2,
    "no-undefined": 2,
    "no-mixed-requires": 2,
    "no-process-exit": 0,
    "handle-callback-err": [2, "^(e|err|error)$"],
    "indent": [2, 2],
    "brace-style": [2, "1tbs", {"allowSingleLine": true}],
    "comma-style": 2,
    "consistent-this": [2, "_this"],
    "func-style": [2, "expression"],
    "max-nested-callbacks": [2, 3],
    "no-lonely-if": 2,
    "no-nested-ternary": 2,
    "no-underscore-dangle": 0,
    "operator-assignment": [2, "always"],
    "quote-props": [2, "as-needed"],
    "quotes": [2, "double", "avoid-escape"],
    "semi": [2, "always"],
    "space-after-keywords": 0,
    "space-before-blocks": [2, "never"],
    "space-before-function-parentheses": [2, "never"],
    "space-in-brackets": [2, "never"],
    "space-in-parens": [2, "never"],
    "space-unary-ops": [2, {"words": true, "nonwords": false}],
    "spaced-line-comment": 2,

    "no-var": 0,
    "generator-star": [2, "end"],

    "max-depth": [1, 5],
    "max-len": [1, 160, 2],
    "max-params": [1, 5],
    "max-statements": [1, 25],
    "no-bitwise": 1
  }
}
